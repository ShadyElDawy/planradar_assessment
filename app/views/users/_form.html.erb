<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :mail %>
  </div>

  <div class="field">
    <%= form.label :send_due_date_reminder %>
    <%= form.check_box :send_due_date_reminder %>
  </div>

  <div class="field">
    <%= form.label :due_date_reminder_interval %>
    <%= form.number_field :due_date_reminder_interval %>
  </div>

  <div class="field">
    <%= form.label :due_date_reminder_time %>
    <%= form.time_field :due_date_reminder_time %>
  </div>

  <div class="field">
    <%= form.label :time_zone %>
    <%= form.text_field :time_zone %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
